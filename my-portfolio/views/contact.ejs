<%- include('partials/header', { title: 'Contact — Ayman Sohail' }) %>
<!-- Shared header keeps <head>, Bootstrap/FA, and nav consistent -->

<article class="container my-5">
  <!-- I wrapped content in a Bootstrap container for clean spacing -->

  <h2 class="text-center mb-4">Contact Me</h2>

  <!-- Success banner (shows after a good submit) -->
  <% if (sent) { %>
    <div class="alert alert-success" role="alert">
      Thanks! Your message was submitted.
    </div>
  <% } %>

  <!-- Error list (shows if the server returns validation errors) -->
  <% if (errors && errors.length) { %>
    <div class="alert alert-danger" role="alert">
      <ul class="mb-0">
        <% errors.forEach(e => { %><li><%= e %></li><% }) %>
      </ul>
    </div>
  <% } %>

  <p class="text-center">
    Please fill out the form and I'll get back to you.
  </p>

  <form id="contact" action="/contact" method="post" novalidate
        class="mx-auto" style="max-width: 600px;">
    <!-- .mx-auto centers the form; max-width keeps it from stretching -->

    <!-- Name -->
    <div class="mb-3">
      <label for="name" class="form-label">Name</label>
      <input id="name" name="name" type="text" class="form-control" required
             value="<%= (values && values.name) || '' %>">
      <!-- I keep the value if validation fails so users don’t retype -->
    </div>

    <!-- Email -->
    <div class="mb-3">
      <label for="email" class="form-label">Email</label>
      <input id="email" name="email" type="email" class="form-control" required
             value="<%= (values && values.email) || '' %>">
    </div>

    <!-- Phone -->
    <div class="mb-3">
      <label for="phone" class="form-label">Cell No.</label>
      <input id="phone" name="phone" type="tel" class="form-control" required
             pattern="^[0-9\\-\\s\\(\\)]{7,}$" placeholder="e.g., 647-555-0123"
             value="<%= (values && values.phone) || '' %>">
    </div>

    <!-- Comments -->
    <div class="mb-3">
      <label for="msg" class="form-label">Comments</label>
      <textarea id="msg" name="msg" rows="6" class="form-control" required><%= (values && values.msg) || '' %></textarea>
    </div>

    <!-- Submit -->
    <div class="text-center">
      <button type="submit" class="btn btn-primary px-4">Submit</button>
    </div>
  </form>
</article>

<%- include('partials/footer') %>
